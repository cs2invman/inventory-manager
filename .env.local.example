# Copy this file to .env.local and fill in your actual values
# .env.local is ignored by git and contains your local/production secrets

###> symfony/framework-bundle ###
APP_SECRET=generate-a-32-character-secret-key-here
###< symfony/framework-bundle ###

###> CS2 Inventory Application - Local Configuration ###
# Steam API Configuration
STEAM_API_KEY=your-actual-steam-api-key
STEAM_MARKET_BASE_URL=https://steamcommunity.com/market

# Discord Configuration
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url
DISCORD_BOT_TOKEN=your-actual-discord-bot-token

# Proxy Configuration
PROXY_SERVICE_URL=http://your-proxy-service.com
PROXY_AUTH_TOKEN=your-actual-proxy-auth-token

# Custom Alert Thresholds
PRICE_CHANGE_THRESHOLD=10.00
MIN_ALERT_INTERVAL=180

# Custom Monitoring Intervals (in seconds)
ITEM_DISCOVERY_INTERVAL=7200
PRICE_UPDATE_INTERVAL=600
ALERT_CHECK_INTERVAL=120
GAME_UPDATE_CHECK_INTERVAL=900
PROXY_HEALTH_CHECK_INTERVAL=300
###< CS2 Inventory Application - Local Configuration ###