<!DOCTYPE html>
<html lang="en" class="h-full">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}CS2 Inventory Platform{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>ðŸŽ®</text></svg>">

        <!-- Tailwind CSS -->
        <link href="{{ asset('build/app.css') }}" rel="stylesheet">

        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            <!-- Alpine.js for interactive components -->
            <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
        {% endblock %}
    </head>
    <body class="h-full bg-gray-900 text-white">
        <div class="min-h-screen bg-gray-900">
            {% if app.user %}
                <!-- Navigat that
                ion Header -->
                <nav class="bg-gray-800 shadow-steam">
                    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                        <div class="flex justify-between items-center h-16">
                            <div class="flex items-center">
                                <div class="flex-shrink-0">
                                    <a href="{{ path('app_dashboard') }}" class="text-xl font-bold text-cs2-orange hover:text-orange-400 transition-colors">
                                        CS2 Inventory
                                    </a>
                                </div>
                                <div class="hidden md:block">
                                    <div class="ml-10 flex items-baseline space-x-4">
                                        <a href="{{ path('inventory_index') }}" class="nav-link {% if app.request.get('_route') starts with 'inventory' %}active{% endif %}">Inventory</a>
                                        <a href="{{ path('ledger_index') }}" class="nav-link {% if app.request.get('_route') starts with 'ledger' %}active{% endif %}">Ledger</a>
                                        <a href="{{ path('items_index') }}" class="nav-link {% if app.request.get('_route') starts with 'items' %}active{% endif %}">Items</a>
                                    </div>
                                </div>
                            </div>
                            <div class="flex items-center space-x-4">
                                <a href="{{ path('app_settings_index') }}" class="nav-link {% if app.request.get('_route') == 'app_settings_index' %}active{% endif %}">
                                    Settings
                                </a>
                                <a href="{{ path('app_logout') }}" class="btn-secondary text-sm">
                                    Logout
                                </a>
                            </div>
                        </div>
                    </div>
                </nav>
            {% endif %}

            {% block body %}{% endblock %}
        </div>
    </body>
</html>
