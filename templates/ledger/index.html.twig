{% extends 'base.html.twig' %}

{% block title %}Investment Ledger - CS2 Inventory{% endblock %}

{% block body %}
<!-- Main Content -->
<main class="w-full py-6 px-8">
    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert-{{ label }} mb-4">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Page Header -->
    <div class="mb-8 flex justify-between items-center">
        <div>
            <h2 class="text-3xl font-bold text-white mb-2">Investment Ledger</h2>
            <p class="text-gray-400">
                Track your CS2 market investments and withdrawals.
            </p>
        </div>
        <a href="{{ path('ledger_new') }}" class="btn-primary">
            Add New Entry
        </a>
    </div>

    {# Include Filter Form #}
    {% include 'ledger/_filters.html.twig' %}

    {# Entry Count Display #}
    {% set hasFilters = currentFilters.transactionType or currentFilters.currency or currentFilters.category %}
    {% if entries is not empty %}
        <div class="mb-4">
            <p class="text-sm text-gray-400">
                {% if hasFilters %}
                    Showing <span class="font-semibold text-white">{{ totalCount }}</span> {{ totalCount == 1 ? 'entry' : 'entries' }} matching filters
                {% else %}
                    Showing <span class="font-semibold text-white">{{ totalCount }}</span> total {{ totalCount == 1 ? 'entry' : 'entries' }}
                {% endif %}
            </p>
        </div>
    {% endif %}

    {% if entries is empty %}
        <!-- Empty State -->
        <div class="card text-center py-12">
            <svg class="mx-auto h-12 w-12 text-gray-500 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
            </svg>
            {% if hasFilters %}
                <h3 class="text-lg font-medium text-white mb-2">No entries match your filters</h3>
                <p class="text-gray-400 mb-6">Try adjusting your filter criteria or clear all filters to see your entries.</p>
                <a href="{{ path('ledger_index') }}" class="btn-primary inline-flex items-center">
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                    Clear Filters
                </a>
            {% else %}
                <h3 class="text-lg font-medium text-white mb-2">No entries yet</h3>
                <p class="text-gray-400 mb-6">Get started by adding your first investment or withdrawal entry.</p>
                <a href="{{ path('ledger_new') }}" class="btn-primary inline-flex items-center">
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
                    </svg>
                    Add First Entry
                </a>
            {% endif %}
        </div>
    {% else %}
        <!-- Entries Table -->
        <div class="card overflow-hidden">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-700">
                    <thead class="bg-gray-800">
                        <tr>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                <span class="inline-flex items-center">
                                    Date
                                    {% if currentSort == 'transactionDate' %}
                                        <svg class="ml-1 h-4 w-4 text-cs2-orange" fill="currentColor" viewBox="0 0 20 20">
                                            {% if currentOrder == 'ASC' %}
                                                <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                                            {% else %}
                                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                            {% endif %}
                                        </svg>
                                    {% endif %}
                                </span>
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                <span class="inline-flex items-center">
                                    Type
                                    {% if currentSort == 'transactionType' %}
                                        <svg class="ml-1 h-4 w-4 text-cs2-orange" fill="currentColor" viewBox="0 0 20 20">
                                            {% if currentOrder == 'ASC' %}
                                                <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                                            {% else %}
                                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                            {% endif %}
                                        </svg>
                                    {% endif %}
                                </span>
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                <span class="inline-flex items-center">
                                    Amount
                                    {% if currentSort == 'amount' %}
                                        <svg class="ml-1 h-4 w-4 text-cs2-orange" fill="currentColor" viewBox="0 0 20 20">
                                            {% if currentOrder == 'ASC' %}
                                                <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                                            {% else %}
                                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                            {% endif %}
                                        </svg>
                                    {% endif %}
                                </span>
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                <span class="inline-flex items-center">
                                    Category
                                    {% if currentSort == 'category' %}
                                        <svg class="ml-1 h-4 w-4 text-cs2-orange" fill="currentColor" viewBox="0 0 20 20">
                                            {% if currentOrder == 'ASC' %}
                                                <path fill-rule="evenodd" d="M14.707 12.707a1 1 0 01-1.414 0L10 9.414l-3.293 3.293a1 1 0 01-1.414-1.414l4-4a1 1 0 011.414 0l4 4a1 1 0 010 1.414z" clip-rule="evenodd"/>
                                            {% else %}
                                                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
                                            {% endif %}
                                        </svg>
                                    {% endif %}
                                </span>
                            </th>
                            <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-300 uppercase tracking-wider">
                                Description
                            </th>
                            <th scope="col" class="px-6 py-3 text-right text-xs font-medium text-gray-300 uppercase tracking-wider">
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-gray-900 divide-y divide-gray-700">
                        {% for entry in entries %}
                            <tr class="hover:bg-gray-800 transition-colors">
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                    {{ entry.transactionDate|date('M d, Y') }}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm">
                                    {% if entry.transactionType == 'investment' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/30 text-green-400 border border-green-700">
                                            Investment
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/30 text-red-400 border border-red-700">
                                            Withdrawal
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-mono">
                                    {% if entry.transactionType == 'investment' %}
                                        <span class="text-green-400">+</span>
                                    {% else %}
                                        <span class="text-red-400">-</span>
                                    {% endif %}
                                    <span class="text-white">{{ entry.amount|currency(entry.currency, userConfig) }}</span>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-300">
                                    {% if entry.category %}
                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-gray-800 text-gray-300">
                                            {{ entry.category }}
                                        </span>
                                    {% else %}
                                        <span class="text-gray-500">-</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 text-sm text-gray-400">
                                    {% if entry.description %}
                                        <div class="max-w-xs truncate">{{ entry.description }}</div>
                                    {% else %}
                                        <span class="text-gray-500">-</span>
                                    {% endif %}
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                    <a href="{{ path('ledger_edit', {id: entry.id}) }}" class="text-cs2-orange hover:text-orange-400 mr-3">
                                        Edit
                                    </a>
                                    <form method="post" action="{{ path('ledger_delete', {id: entry.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this entry?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete-ledger-' ~ entry.id) }}">
                                        <button type="submit" class="text-red-400 hover:text-red-300">
                                            Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                    <tfoot class="bg-gray-800 border-t-2 border-cs2-orange">
                        <tr>
                            <td colspan="2" class="px-6 py-4 text-sm font-semibold text-white">
                                Total Transactions: {{ totalCount }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-mono font-semibold">
                                {% if netTotal >= 0 %}
                                    <span class="text-green-400">
                                        {% if preferredCurrency == 'CAD' %}
                                            CA${{ netTotal|number_format(2, '.', ',') }}
                                        {% else %}
                                            ${{ netTotal|number_format(2, '.', ',') }}
                                        {% endif %}
                                    </span>
                                {% else %}
                                    <span class="text-red-400">
                                        {% if preferredCurrency == 'CAD' %}
                                            -CA${{ (netTotal * -1)|number_format(2, '.', ',') }}
                                        {% else %}
                                            -${{ (netTotal * -1)|number_format(2, '.', ',') }}
                                        {% endif %}
                                    </span>
                                {% endif %}
                            </td>
                            <td colspan="3" class="px-6 py-4 text-sm text-gray-400 text-right">
                                Net Total
                            </td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    {% endif %}
</main>
{% endblock %}
