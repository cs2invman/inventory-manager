{% extends 'base.html.twig' %}

{% block title %}New Ledger Entry - CS2 Inventory{% endblock %}

{% block body %}
<!-- Main Content -->
<main class="w-full py-6 px-8">
    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert-{{ label }} mb-4">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Page Header -->
    <div class="mb-8">
        <h2 class="text-3xl font-bold text-white mb-2">Add New Ledger Entry</h2>
        <p class="text-gray-400">
            Record a new investment or withdrawal transaction.
        </p>
    </div>

    <!-- Form Card -->
    <div class="max-w-2xl">
        <div class="card">
            {% include 'ledger/_form.html.twig' with {'button_text': 'Create Entry'} %}
        </div>
    </div>
</main>
{% endblock %}
