{% extends 'base.html.twig' %}

{% block title %}Discord Settings - Admin Panel{% endblock %}

{% block body %}
<main class="w-full py-6 px-8">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-white mb-2">Discord Settings</h1>
                <p class="text-gray-400">Manage Discord webhooks, users, and configuration</p>
            </div>
            <a href="{{ path('admin_index') }}" class="btn-secondary">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Admin Panel
            </a>
        </div>
    </div>

    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 p-4 rounded-lg {% if label == 'success' %}bg-green-900/30 text-green-400 border border-green-800{% else %}bg-red-900/30 text-red-400 border border-red-800{% endif %}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Section 1: General Configuration -->
    <div class="card mb-6">
        <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-cs2-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            General Configuration
        </h2>

        {% if configs is empty %}
            <p class="text-gray-400 text-sm">No Discord configuration found.</p>
        {% else %}
            <form method="post" action="{{ path('discord_admin_config_save') }}">
                <div class="overflow-x-auto">
                    <table class="w-full">
                        <thead>
                            <tr class="border-b border-gray-700">
                                <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Configuration Key</th>
                                <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Value</th>
                                <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Description</th>
                                <th class="text-center py-3 px-4 text-sm font-medium text-gray-400">Enabled</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for config in configs %}
                                {% set fieldName = 'config_' ~ config.id %}
                                {% if configForm[fieldName] is defined %}
                                <tr class="border-b border-gray-800 hover:bg-gray-800/50">
                                    <td class="py-3 px-4 text-sm font-mono text-white">{{ config.configKey }}</td>
                                    <td class="py-3 px-4">
                                        {{ form_widget(configForm[fieldName]['value']) }}
                                    </td>
                                    <td class="py-3 px-4 text-sm text-gray-400">{{ config.description ?? '-' }}</td>
                                    <td class="py-3 px-4 text-center">
                                        {{ form_widget(configForm[fieldName]['enabled']) }}
                                    </td>
                                </tr>
                                {% endif %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                {{ form_rest(configForm) }}
                <div class="mt-4">
                    <button type="submit" class="btn-primary">
                        Save Configuration
                    </button>
                </div>
            </form>
        {% endif %}
    </div>

    <!-- Section 2: Webhook Management -->
    <div class="card mb-6">
        <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-semibold text-white flex items-center">
                <svg class="w-5 h-5 mr-2 text-cs2-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
                Webhook Management
            </h2>
            <button onclick="document.getElementById('webhookModal').classList.remove('hidden')" class="btn-primary text-sm">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Add Webhook
            </button>
        </div>

        {% if webhooks is empty %}
            <p class="text-gray-400 text-sm">No webhooks configured yet. Click "Add Webhook" to create one.</p>
        {% else %}
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-700">
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Identifier</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Display Name</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Webhook URL</th>
                            <th class="text-center py-3 px-4 text-sm font-medium text-gray-400">Status</th>
                            <th class="text-right py-3 px-4 text-sm font-medium text-gray-400">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for webhook in webhooks %}
                            <tr class="border-b border-gray-800 hover:bg-gray-800/50">
                                <td class="py-3 px-4 text-sm font-mono text-white">{{ webhook.identifier }}</td>
                                <td class="py-3 px-4 text-sm text-white">{{ webhook.displayName }}</td>
                                <td class="py-3 px-4 text-sm text-gray-400 font-mono">
                                    {% set url = webhook.webhookUrl %}
                                    {% if url|length > 50 %}
                                        {{ url[:40] }}...{{ url[-6:] }}
                                    {% else %}
                                        {{ url }}
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-center">
                                    {% if webhook.isEnabled %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/30 text-green-400 border border-green-800">
                                            Enabled
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/30 text-red-400 border border-red-800">
                                            Disabled
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-right">
                                    <div class="flex items-center justify-end space-x-2">
                                        <form method="post" action="{{ path('discord_admin_webhook_toggle', {id: webhook.id}) }}" class="inline">
                                            <button type="submit" class="text-yellow-400 hover:text-yellow-300 text-xs" title="Toggle status">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                                                </svg>
                                            </button>
                                        </form>
                                        <form method="post" action="{{ path('discord_admin_webhook_delete', {id: webhook.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this webhook?')">
                                            <button type="submit" class="text-red-400 hover:text-red-300 text-xs" title="Delete">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

    <!-- Section 3: Linked Discord Users -->
    <div class="card mb-6">
        <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-cs2-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            Linked Discord Users
        </h2>

        {% if discordUsers is empty %}
            <p class="text-gray-400 text-sm">No Discord users linked yet.</p>
        {% else %}
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-700">
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Discord Username</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Linked User</th>
                            <th class="text-center py-3 px-4 text-sm font-medium text-gray-400">Status</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Linked Date</th>
                            <th class="text-right py-3 px-4 text-sm font-medium text-gray-400">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for discordUser in discordUsers %}
                            <tr class="border-b border-gray-800 hover:bg-gray-800/50">
                                <td class="py-3 px-4 text-sm text-white">{{ discordUser.formattedUsername }}</td>
                                <td class="py-3 px-4 text-sm text-gray-400">{{ discordUser.user.email }}</td>
                                <td class="py-3 px-4 text-center">
                                    {% if discordUser.isVerified %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/30 text-green-400 border border-green-800">
                                            Verified
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/30 text-red-400 border border-red-800">
                                            Unverified
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-sm text-gray-400">{{ discordUser.linkedAt|date('Y-m-d H:i') }}</td>
                                <td class="py-3 px-4 text-right">
                                    <div class="flex items-center justify-end space-x-2">
                                        {% if discordUser.isVerified %}
                                            <form method="post" action="{{ path('discord_admin_user_unverify', {id: discordUser.id}) }}" class="inline">
                                                <button type="submit" class="text-yellow-400 hover:text-yellow-300 text-xs px-2 py-1 border border-yellow-600 rounded" title="Unverify">
                                                    Unverify
                                                </button>
                                            </form>
                                        {% else %}
                                            <form method="post" action="{{ path('discord_admin_user_verify', {id: discordUser.id}) }}" class="inline">
                                                <button type="submit" class="text-green-400 hover:text-green-300 text-xs px-2 py-1 border border-green-600 rounded" title="Verify">
                                                    Verify
                                                </button>
                                            </form>
                                        {% endif %}
                                        <form method="post" action="{{ path('discord_admin_user_delete', {id: discordUser.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this Discord link?')">
                                            <button type="submit" class="text-red-400 hover:text-red-300 text-xs" title="Delete">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                                                </svg>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>

    <!-- Section 4: Recent Notifications -->
    <div class="card">
        <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-cs2-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"></path>
            </svg>
            Recent Notifications
        </h2>

        {% if recentNotifications is empty %}
            <p class="text-gray-400 text-sm">No notifications sent yet.</p>
        {% else %}
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-700">
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Type</th>
                            <th class="text-center py-3 px-4 text-sm font-medium text-gray-400">Status</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Created At</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Message Preview</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for notification in recentNotifications %}
                            <tr class="border-b border-gray-800 hover:bg-gray-800/50">
                                <td class="py-3 px-4 text-sm font-mono text-white">{{ notification.notificationType }}</td>
                                <td class="py-3 px-4 text-center">
                                    {% if notification.status == 'sent' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/30 text-green-400 border border-green-800">
                                            Sent
                                        </span>
                                    {% elseif notification.status == 'failed' %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/30 text-red-400 border border-red-800">
                                            Failed
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-yellow-900/30 text-yellow-400 border border-yellow-800">
                                            Queued
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-sm text-gray-400">{{ notification.createdAt|date('Y-m-d H:i:s') }}</td>
                                <td class="py-3 px-4 text-sm text-gray-400">
                                    {% set message = notification.messageContent %}
                                    {% if message|length > 60 %}
                                        {{ message[:60] }}...
                                    {% else %}
                                        {{ message }}
                                    {% endif %}
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</main>

<!-- Webhook Modal -->
<div id="webhookModal" class="hidden fixed inset-0 bg-black bg-opacity-50 z-50 flex items-center justify-center p-4">
    <div class="bg-gray-800 rounded-lg max-w-2xl w-full max-h-[90vh] overflow-y-auto">
        <div class="p-6">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-xl font-semibold text-white">Add New Webhook</h3>
                <button onclick="document.getElementById('webhookModal').classList.add('hidden')" class="text-gray-400 hover:text-white">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                </button>
            </div>

            <form method="post" action="{{ path('discord_admin_webhook_create') }}">
                <div class="space-y-4">
                    <div>
                        {{ form_label(webhookForm.identifier) }}
                        {{ form_widget(webhookForm.identifier) }}
                        {{ form_help(webhookForm.identifier) }}
                        {{ form_errors(webhookForm.identifier) }}
                    </div>

                    <div>
                        {{ form_label(webhookForm.displayName) }}
                        {{ form_widget(webhookForm.displayName) }}
                        {{ form_help(webhookForm.displayName) }}
                        {{ form_errors(webhookForm.displayName) }}
                    </div>

                    <div>
                        {{ form_label(webhookForm.webhookUrl) }}
                        {{ form_widget(webhookForm.webhookUrl) }}
                        {{ form_help(webhookForm.webhookUrl) }}
                        {{ form_errors(webhookForm.webhookUrl) }}
                    </div>

                    <div>
                        {{ form_label(webhookForm.description) }}
                        {{ form_widget(webhookForm.description) }}
                        {{ form_help(webhookForm.description) }}
                        {{ form_errors(webhookForm.description) }}
                    </div>

                    <div class="flex items-center">
                        {{ form_widget(webhookForm.isEnabled) }}
                        <label for="{{ webhookForm.isEnabled.vars.id }}" class="ml-2 text-sm text-gray-300">
                            {{ form_label(webhookForm.isEnabled) }}
                        </label>
                    </div>

                    {{ form_rest(webhookForm) }}
                </div>

                <div class="mt-6 flex justify-end space-x-3">
                    <button type="button" onclick="document.getElementById('webhookModal').classList.add('hidden')" class="btn-secondary">
                        Cancel
                    </button>
                    <button type="submit" class="btn-primary">
                        Create Webhook
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
