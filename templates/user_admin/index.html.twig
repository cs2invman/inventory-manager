{% extends 'base.html.twig' %}

{% block title %}User Management - Admin Panel{% endblock %}

{% block body %}
<main class="w-full py-6 px-8">
    <!-- Header -->
    <div class="mb-6">
        <div class="flex items-center justify-between">
            <div>
                <h1 class="text-3xl font-bold text-white mb-2">User Management</h1>
                <p class="text-gray-400">Manage user accounts, roles, and permissions</p>
            </div>
            <a href="{{ path('admin_index') }}" class="btn-secondary">
                <svg class="w-4 h-4 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                </svg>
                Back to Admin Panel
            </a>
        </div>
    </div>

    <!-- Flash Messages -->
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="mb-4 p-4 rounded-lg {% if label == 'success' %}bg-green-900/30 text-green-400 border border-green-800{% else %}bg-red-900/30 text-red-400 border border-red-800{% endif %}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    <!-- Create User Form -->
    <div class="card mb-6">
        <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-cs2-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
            </svg>
            Create New User
        </h2>

        {{ form_start(createForm, {'action': path('user_admin_create'), 'method': 'POST'}) }}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-4">
            <div>
                {{ form_label(createForm.email, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-1'}}) }}
                {{ form_widget(createForm.email) }}
                {{ form_errors(createForm.email) }}
            </div>
            <div>
                {{ form_label(createForm.firstName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-1'}}) }}
                {{ form_widget(createForm.firstName) }}
                {{ form_errors(createForm.firstName) }}
            </div>
            <div>
                {{ form_label(createForm.lastName, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-300 mb-1'}}) }}
                {{ form_widget(createForm.lastName) }}
                {{ form_errors(createForm.lastName) }}
            </div>
            <div class="flex items-center">
                <label class="flex items-center space-x-2 cursor-pointer">
                    {{ form_widget(createForm.isAdmin) }}
                    <span class="text-sm text-gray-300">{{ createForm.isAdmin.vars.label }}</span>
                </label>
            </div>
        </div>
        <div class="flex items-center justify-between">
            <p class="text-xs text-gray-400">A random 24-character password will be generated and displayed after creation.</p>
            <button type="submit" class="btn-primary">
                <svg class="w-4 h-4 inline mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
                </svg>
                Create User
            </button>
        </div>
        {{ form_end(createForm) }}
    </div>

    <!-- Users Table -->
    <div class="card">
        <h2 class="text-xl font-semibold text-white mb-4 flex items-center">
            <svg class="w-5 h-5 mr-2 text-cs2-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z"></path>
            </svg>
            All Users
        </h2>

        {% if usersData is empty %}
            <p class="text-gray-400 text-sm">No users found.</p>
        {% else %}
            <div class="overflow-x-auto">
                <table class="w-full">
                    <thead>
                        <tr class="border-b border-gray-700">
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">ID</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Email</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Name</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Roles</th>
                            <th class="text-center py-3 px-4 text-sm font-medium text-gray-400">Status</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Last Login</th>
                            <th class="text-center py-3 px-4 text-sm font-medium text-gray-400">Items</th>
                            <th class="text-left py-3 px-4 text-sm font-medium text-gray-400">Created</th>
                            <th class="text-right py-3 px-4 text-sm font-medium text-gray-400">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for data in usersData %}
                            {% set user = data[0] %}
                            {% set itemCount = data.itemCount %}
                            {% set isCurrentUser = app.user.id == user.id %}
                            <tr class="border-b border-gray-800 hover:bg-gray-800/50" id="user-{{ user.id }}">
                                <td class="py-3 px-4 text-sm text-gray-400">{{ user.id }}</td>
                                <td class="py-3 px-4 text-sm text-white font-medium">{{ user.email }}</td>
                                <td class="py-3 px-4 text-sm text-white">{{ user.firstName }} {{ user.lastName }}</td>
                                <td class="py-3 px-4">
                                    <div class="flex flex-wrap gap-1">
                                        {% if 'ROLE_ADMIN' in user.roles %}
                                            <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-red-900/30 text-red-400 border border-red-800">
                                                ADMIN
                                            </span>
                                        {% endif %}
                                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-blue-900/30 text-blue-400 border border-blue-800">
                                            USER
                                        </span>
                                    </div>
                                </td>
                                <td class="py-3 px-4 text-center">
                                    {% if user.isActive %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-900/30 text-green-400 border border-green-800">
                                            Active
                                        </span>
                                    {% else %}
                                        <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-900/30 text-red-400 border border-red-800">
                                            Disabled
                                        </span>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-sm text-gray-400">
                                    {% if user.lastLoginAt %}
                                        {{ user.lastLoginAt|date('Y-m-d H:i:s') }}
                                    {% else %}
                                        <span class="text-gray-500">Never</span>
                                    {% endif %}
                                </td>
                                <td class="py-3 px-4 text-center text-sm text-gray-400">
                                    {{ itemCount }}
                                </td>
                                <td class="py-3 px-4 text-sm text-gray-400">
                                    {{ user.createdAt|date('Y-m-d') }}
                                </td>
                                <td class="py-3 px-4 text-right">
                                    <div class="flex items-center justify-end space-x-2">
                                        <!-- Edit Button -->
                                        <button onclick="toggleEditForm({{ user.id }})" class="text-blue-400 hover:text-blue-300 text-xs" title="Edit user">
                                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                                            </svg>
                                        </button>

                                        <!-- Change Password -->
                                        <form method="post" action="{{ path('user_admin_password', {id: user.id}) }}" class="inline">
                                            <button type="submit" class="text-yellow-400 hover:text-yellow-300 text-xs" title="Change password">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z"></path>
                                                </svg>
                                            </button>
                                        </form>

                                        <!-- Toggle Active/Disabled -->
                                        {% if not isCurrentUser %}
                                            <form method="post" action="{{ path('user_admin_toggle', {id: user.id}) }}" class="inline">
                                                <button type="submit" class="text-purple-400 hover:text-purple-300 text-xs" title="{% if user.isActive %}Disable{% else %}Enable{% endif %} user">
                                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                                                    </svg>
                                                </button>
                                            </form>
                                        {% else %}
                                            <button class="text-gray-600 cursor-not-allowed text-xs" title="Cannot modify your own account" disabled>
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"></path>
                                                </svg>
                                            </button>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                            <!-- Edit Form Row (Hidden by default) -->
                            <tr id="edit-form-{{ user.id }}" class="hidden border-b border-gray-800 bg-gray-800/30">
                                <td colspan="9" class="py-4 px-4">
                                    <form method="post" action="{{ path('user_admin_edit', {id: user.id}) }}" class="space-y-4">
                                        <h3 class="text-lg font-semibold text-white mb-3">Edit User: {{ user.email }}</h3>
                                        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                            <div>
                                                <label class="block text-sm font-medium text-gray-300 mb-1">Email</label>
                                                <input type="email" name="user_edit_form[email]" value="{{ user.email }}" required
                                                    class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white placeholder-gray-400 focus:border-blue-500 focus:ring-blue-500">
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-300 mb-1">First Name</label>
                                                <input type="text" name="user_edit_form[firstName]" value="{{ user.firstName }}" required
                                                    class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white placeholder-gray-400 focus:border-blue-500 focus:ring-blue-500">
                                            </div>
                                            <div>
                                                <label class="block text-sm font-medium text-gray-300 mb-1">Last Name</label>
                                                <input type="text" name="user_edit_form[lastName]" value="{{ user.lastName }}" required
                                                    class="mt-1 block w-full rounded-md bg-gray-700 border-gray-600 text-white placeholder-gray-400 focus:border-blue-500 focus:ring-blue-500">
                                            </div>
                                        </div>
                                        <div class="flex items-center space-x-4">
                                            <label class="flex items-center space-x-2 cursor-pointer">
                                                <input type="checkbox" name="user_edit_form[isAdmin]" {% if 'ROLE_ADMIN' in user.roles %}checked{% endif %}
                                                    {% if isCurrentUser %}disabled{% endif %}
                                                    class="rounded bg-gray-700 border-gray-600 text-blue-600 focus:ring-blue-500 focus:ring-offset-gray-800">
                                                <span class="text-sm text-gray-300">Grant Admin Role (ROLE_ADMIN)</span>
                                            </label>
                                            {% if isCurrentUser %}
                                                <span class="text-xs text-yellow-400">(Cannot modify your own admin role)</span>
                                            {% endif %}
                                        </div>
                                        <input type="hidden" name="user_edit_form[_token]" value="{{ csrf_token('user_edit_form') }}">
                                        <div class="flex items-center space-x-2">
                                            <button type="submit" class="btn-primary">
                                                Save Changes
                                            </button>
                                            <button type="button" onclick="toggleEditForm({{ user.id }})" class="btn-secondary">
                                                Cancel
                                            </button>
                                        </div>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% endif %}
    </div>
</main>

<script>
function toggleEditForm(userId) {
    const editRow = document.getElementById('edit-form-' + userId);
    editRow.classList.toggle('hidden');
}
</script>
{% endblock %}
