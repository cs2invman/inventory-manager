{#
    Navigation Component

    Responsive navigation with mobile hamburger menu and desktop horizontal layout.

    Dependencies:
    - Alpine.js (loaded in base.html.twig)
    - Tailwind CSS
    - Custom CSS classes: .nav-link, .nav-link.active

    Features:
    - Full-width navigation bar
    - Mobile (< 768px): Logo left, hamburger right, slide-in panel
    - Desktop (>= 768px): Horizontal navigation with logo left, links center-left, user nav right
    - Active link highlighting based on current route
    - ROLE_ADMIN check for Admin link visibility
#}

<nav x-data="{ mobileMenuOpen: false }" class="bg-gray-800 shadow-steam">
    {# Full-width container with padding #}
    <div class="px-4 sm:px-6 lg:px-8">
        <div class="flex justify-between items-center h-16">
            {# Left side: Logo (always visible) #}
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <a href="{{ path('app_dashboard') }}" class="text-xl font-bold text-cs2-orange hover:text-orange-400 transition-colors">
                        CS2 Inventory
                    </a>
                </div>

                {# Desktop navigation links (hidden on mobile) #}
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        <a href="{{ path('inventory_index') }}" class="nav-link {% if app.request.get('_route') starts with 'inventory' %}active{% endif %}">Inventory</a>
                        <a href="{{ path('ledger_index') }}" class="nav-link {% if app.request.get('_route') starts with 'ledger' %}active{% endif %}">Ledger</a>
                        <a href="{{ path('items_index') }}" class="nav-link {% if app.request.get('_route') starts with 'items' %}active{% endif %}">Items</a>
                    </div>
                </div>
            </div>

            {# Right side: Desktop user nav (hidden on mobile) #}
            <div class="hidden md:flex items-center space-x-4">
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('admin_index') }}" class="nav-link {% if app.request.get('_route') starts with 'admin' or app.request.get('_route') starts with 'discord_admin' %}active{% endif %}">
                        Admin
                    </a>
                {% endif %}
                <a href="{{ path('app_settings_index') }}" class="nav-link {% if app.request.get('_route') == 'app_settings_index' %}active{% endif %}">
                    Settings
                </a>
                <a href="{{ path('app_logout') }}" class="btn-secondary text-sm">
                    Logout
                </a>
            </div>

            {# Mobile hamburger button (visible only on mobile) #}
            <div class="md:hidden">
                <button
                    @click="mobileMenuOpen = !mobileMenuOpen"
                    type="button"
                    class="inline-flex items-center justify-center p-2 rounded-md text-gray-300 hover:text-cs2-orange hover:bg-gray-700 transition-colors duration-200"
                    aria-label="Toggle navigation menu"
                    aria-expanded="false"
                >
                    {# Hamburger icon (visible when menu is closed) #}
                    <svg x-show="!mobileMenuOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                    {# Close icon (visible when menu is open) #}
                    <svg x-show="mobileMenuOpen" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    {# Mobile slide-in panel #}
    <div
        x-show="mobileMenuOpen"
        x-transition:enter="transition ease-out duration-200"
        x-transition:enter-start="opacity-0"
        x-transition:enter-end="opacity-100"
        x-transition:leave="transition ease-in duration-150"
        x-transition:leave-start="opacity-100"
        x-transition:leave-end="opacity-0"
        @click="mobileMenuOpen = false"
        class="fixed inset-0 z-40 bg-black bg-opacity-50 md:hidden"
        style="display: none;"
    >
        {# Slide-in panel content #}
        <div
            @click.stop
            x-show="mobileMenuOpen"
            x-transition:enter="transition ease-out duration-200 transform"
            x-transition:enter-start="translate-x-full"
            x-transition:enter-end="translate-x-0"
            x-transition:leave="transition ease-in duration-150 transform"
            x-transition:leave-start="translate-x-0"
            x-transition:leave-end="translate-x-full"
            class="fixed right-0 top-0 bottom-0 w-64 bg-gray-800 shadow-lg overflow-y-auto z-50"
        >
            {# Close button inside panel #}
            <div class="flex justify-end p-4">
                <button
                    @click="mobileMenuOpen = false"
                    type="button"
                    class="p-2 rounded-md text-gray-300 hover:text-cs2-orange hover:bg-gray-700 transition-colors duration-200"
                    aria-label="Close navigation menu"
                >
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>

            {# Main navigation links #}
            <div class="px-4 py-2 space-y-1">
                <a
                    href="{{ path('inventory_index') }}"
                    @click="mobileMenuOpen = false"
                    class="nav-link block {% if app.request.get('_route') starts with 'inventory' %}active{% endif %}"
                >
                    Inventory
                </a>
                <a
                    href="{{ path('ledger_index') }}"
                    @click="mobileMenuOpen = false"
                    class="nav-link block {% if app.request.get('_route') starts with 'ledger' %}active{% endif %}"
                >
                    Ledger
                </a>
                <a
                    href="{{ path('items_index') }}"
                    @click="mobileMenuOpen = false"
                    class="nav-link block {% if app.request.get('_route') starts with 'items' %}active{% endif %}"
                >
                    Items
                </a>
            </div>

            {# Divider #}
            <div class="border-t border-gray-700 my-4"></div>

            {# User navigation links #}
            <div class="px-4 py-2 space-y-1">
                {% if is_granted('ROLE_ADMIN') %}
                    <a
                        href="{{ path('admin_index') }}"
                        @click="mobileMenuOpen = false"
                        class="nav-link block {% if app.request.get('_route') starts with 'admin' or app.request.get('_route') starts with 'discord_admin' %}active{% endif %}"
                    >
                        Admin
                    </a>
                {% endif %}
                <a
                    href="{{ path('app_settings_index') }}"
                    @click="mobileMenuOpen = false"
                    class="nav-link block {% if app.request.get('_route') == 'app_settings_index' %}active{% endif %}"
                >
                    Settings
                </a>
                <a
                    href="{{ path('app_logout') }}"
                    @click="mobileMenuOpen = false"
                    class="btn-secondary block text-sm text-center mt-4"
                >
                    Logout
                </a>
            </div>
        </div>
    </div>
</nav>
